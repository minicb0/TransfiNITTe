<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/public/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
        integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body style="height: 100vh;">
    <div class="wrapper">
        <div class="main_content">
            <div class="info">
                <%- include('./partials/header.ejs'); %>
                    <div class="row">
                        <div class="container">
                            <h2>Dashboard</h2>
                        <form action="/fillForm" method="POST">
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="" name="name" required>
                                <label>Name<span style="color: red;">(*)</span></label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="" name="fname" required>
                                <label>Father's/Husband's Name<span style="color: red;">(*)</span></label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="" name="age" required>
                                <label>Age<span style="color: red;">(*)</span></label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="" name="state" required>
                                <label>State<span style="color: red;">(*)</span></label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="">
                                <label>Gender</label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="">
                                <label>District</label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <input class="effect-14" type="text" placeholder="">
                                <label>Assesmly Constituency</label>
                                <span class="focus-border"></span>
                            </div>
                            <div class="col-3 input-effect">
                                <button type="submit" class="submit">Submit</button>
                            </div>
                        </form>
                            
                        </div>
                    </div>
            </div>
        </div>
    </div>
    <script>
    	$(window).load(function(){
		$(".col-3 input").val("");
		
		$(".input-effect input").focusout(function(){
			if($(this).val() != ""){
				$(this).addClass("has-content");
			}else{
				$(this).removeClass("has-content");
			}
		})
	});
    </script>
</body>

</html>